@using System.Security.Claims
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/animacao.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/Usuario.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
</head>
<body class="bg-light vh-100 d-flex flex-column justify-content-end">

    <!-- Header fixo com imagem de fundo -->
    <header class="custom-header text-white py-3 px-4 fixed-top w-100">
        <div class="profile-circle" style="background: url('/imagens/conta-icon.png') no-repeat center center;background-size:110% 115%;">
        </div>
        <p class="user-name">@User.Identity.Name</p>
        <p class="user-function">@User.FindFirst(ClaimTypes.Actor)?.Value</p>
    </header>

    <div class="d-flex" style="height:82%;" >
        <div class="sidebar">
            <a class="menu-btn active" onclick="activateButton(this)">Feed</a>
            <a class="menu-btn" onclick="activateButton(this)">Perfil</a>
            <a class="menu-btn" onclick="activateButton(this)">Meu Acompanhamento</a>
            <a class="menu-btn" onclick="activateButton(this)">Treinamentos</a>
            <a class="menu-btn" onclick="activateButton(this)">Quizz</a>
            <a class="menu-btn" onclick="activateButton(this)">Meu RH</a>
            @if (User.FindFirst(ClaimTypes.Role).Value == "1")
            {
                <a asp-controller="Administrativo" asp-action="Index" class="menu-btn" onclick="activateButton(this)">Administrativo</a>
            }
            <a asp-controller="Login" asp-action="Logout"  class="logout-btn"> <img width="25" style="margin-right:10px" src="~/imagens/sair-icon.png"/> 
                <span>Sair</span> 
            </a>
        </div>

        <!-- Conteúdo Principal -->
        <main class="p-4" style="width:82%;">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
